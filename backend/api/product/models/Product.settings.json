{
  "connection": "default",
  "collectionName": "product",
  "info": {
    "name": "product",
    "description": "Represents a product in the store"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "private": true
    },
    "show": {
      "required": true,
      "default": true,
      "type": "boolean",
      "private": true
    },
    "reference": {
      "type": "string"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "short_description": {
      "type": "text"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "book_info": {
      "type": "component",
      "repeatable": false,
      "component": "bookstore.book-info"
    },
    "category": {
      "model": "category"
    },
    "order_available": {
      "type": "boolean",
      "default": true,
      "required": true,
      "private": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Livro",
        "Outro"
      ],
      "default": "Outro",
      "required": true
    },
    "stock_status": {
      "type": "enumeration",
      "enum": [
        "IN_STOCK",
        "LOW_STOCK",
        "ORDER_ONLY",
        "UNAVAILABLE"
      ],
      "default": "IN_STOCK",
      "required": true
    }
  }
}
