{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "product",
  "info": {
    "name": "product",
    "description": "Represents a product in the store"
  },
  "options": {
    "timestamps": ["createdAt", "updatedAt"]
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "index": true
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "private": true
    },
    "lastQuantity": {
      "type": "integer",
      "required": true,
      "private": true,
      "default": 0
    },
    "show": {
      "required": true,
      "default": true,
      "type": "boolean",
      "private": true,
      "index": true
    },
    "reference": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "shortDescription": {
      "type": "text"
    },
    "bookInfo": {
      "type": "component",
      "repeatable": false,
      "component": "bookstore.book-info"
    },
    "category": {
      "model": "category"
    },
    "orderAvailable": {
      "type": "boolean",
      "default": true,
      "required": true,
      "private": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["Livro", "Outro"],
      "default": "Outro",
      "required": true
    },
    "stockStatus": {
      "type": "enumeration",
      "enum": ["IN_STOCK", "LOW_STOCK", "ORDER_ONLY", "UNAVAILABLE"],
      "default": "IN_STOCK",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "weight": {
      "type": "decimal",
      "min": 0,
      "default": 0,
      "private": true
    }
  }
}
