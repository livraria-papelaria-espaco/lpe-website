{
  "connection": "default",
  "collectionName": "product",
  "info": {
    "name": "product",
    "description": "Represents a product in the store"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "show": {
      "required": true,
      "default": true,
      "type": "boolean"
    },
    "reference": {
      "type": "string"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "short_description": {
      "type": "text"
    }
  }
}