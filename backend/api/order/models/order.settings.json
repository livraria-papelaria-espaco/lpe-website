{
  "connection": "default",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "price": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "shippingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "checkout.address"
    },
    "billingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "checkout.address"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "orderData": {
      "type": "json"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "WAITING_PAYMENT",
        "PROCESSING",
        "SHIPPED",
        "DELIVERED",
        "READY_TO_PICKUP",
        "DELIVERY_FAILED"
      ],
      "default": "WAITING_PAYMENT",
      "required": true
    },
    "paymentGateway": {
      "type": "enumeration",
      "enum": [
        "IN_STORE",
        "PAYPAL"
      ],
      "default": "IN_STORE",
      "required": true
    },
    "storePickup": {
      "type": "boolean",
      "required": true
    }
  }
}
